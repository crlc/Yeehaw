<% if (group.get("member?")) { %>
  <div class="bar">
    <ul class="nav nav-tabs nav-justified">
      <li <% if (group.get('id') === 1) { %> class="active" <% }; %> >
      <a href="#/">Nearby</a></li>
      <% if (group.get('herd_id')) { %>
        <li <% if (group.get('id') !== 1) { %> class="active" <% }; %> >
        <a href="#/groups/<%= group.get('herd_id') %>">My Herd</a></li>
      <% } else { %>
        <li><a href="#/groups/">Add Herd</a></li>
      <% }; %>
      <li>
        <a role="button" class="btn-compose btn btn-primary">
          <span class="glyphicon glyphicon-pencil"></span>
        </a>
      </li>
    </ul>
  </div>
<% }; %>

